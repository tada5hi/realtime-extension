{
    "name": "redis-extension",
    "version": "1.3.0",
    "description": "A redis extension.",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly",
        "build:js": "rollup -c",
        "build": "rimraf dist && npm run build:types && npm run build:js",
        "lint": "eslint --ext .js,.ts ./src",
        "lint:fix": "npm run lint -- --fix",
        "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
        "test:coverage": "npm run test -- --coverage",
        "release": "npm run build && changelogen --release --push && npm publish"
    },
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "license": "MIT",
    "keywords": [
        "redis",
        "store",
        "cache",
        "tracker",
        "scheduler",
        "typescript",
        "cluster",
        "client"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tada5hi/redis-extension.git"
    },
    "bugs": {
        "url": "https://github.com/tada5hi/redis-extension/issues"
    },
    "homepage": "https://github.com/tada5hi/redis-extension#readme",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-swc": "^0.3.0",
        "@tada5hi/commitlint-config": "^1.0.1",
        "@tada5hi/eslint-config-typescript": "^1.1.6",
        "@tada5hi/tsconfig": "^0.5.1",
        "@types/ioredis-mock": "^8.2.1",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@types/node-schedule": "^2.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.37.0",
        "husky": "^8.0.3",
        "ioredis-mock": "^8.2.6",
        "jest": "^29.5.0",
        "rollup": "^4.14.3",
        "ts-jest": "^29.0.5",
        "typescript": "^5.0.3"
    },
    "dependencies": {
        "ioredis": "^5.3.1",
        "node-schedule": "^2.1.1",
        "smob": "^1.5.0"
    }
}
